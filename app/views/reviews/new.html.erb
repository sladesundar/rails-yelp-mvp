<div class="container">
  <div class="col-md-6 col-md-offset-3">
    <div class="card">
    <h4> Writing a review for <strong><%= @restaurant.name %></strong> </h4>
      <%= simple_form_for [@restaurant, @review] do |f| %>
        <%= f.input :content %>
        <%= f.input :rating, collection: 0..5 %>
        <div class="flexybuttons">
          <span>
           <%= f.submit class: "btn btn-primary" %>
          </span>
          <span>
            <%= link_to 'Back', restaurants_path, class: "btn btn-danger" %>
          </span>
       </div>
      <% end %>
      </div>
    </div>
</div>
