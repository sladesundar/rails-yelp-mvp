<div class="container">
  <div class="card">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Phone</th>
          <th>category</th>
        </tr>
      </thead>

      <tbody >
        <% @restaurants.each do |restaurant| %>
          <tr>
            <td><%= link_to restaurant.name, restaurant_path(restaurant) %></td>
            <td><%= restaurant.address %></td>
            <td><%= restaurant.phone_number %></td>
            <td><%= restaurant.category %> </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to 'Create New Restaurant', new_restaurant_path, class: "btn btn-primary" %>
  </div>
</div>


