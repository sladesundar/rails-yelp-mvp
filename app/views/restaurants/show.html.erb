<h1>Viewing <%= @restaurant.name %></h1>

<div class="container">

  <p id="notice"><%= notice %></p>

  <p>
    <strong>Name:</strong>
    <%= @restaurant.name %>
  </p>

  <p>
    <strong>Address:</strong>
    <%= @restaurant.address %>
  </p>

  <p>
    <strong>Number:</strong>
    <%= @restaurant.phone_number %>
  </p>

  <p>
    <strong>Category:</strong>
    <%= @restaurant.category %>
  </p>

  <%= link_to 'Back', restaurants_path, class: "btn btn-primary" %>
  <%= link_to 'Add Review', new_restaurant_review_path(@restaurant), class: "btn btn-primary" %>

  <ul>
    <% @restaurant.reviews.each do |review| %>
    <li>Review: <%= review.content %> | Rating: <%= review.rating %> </li>

    <% end %>
  </ul>

</div>

